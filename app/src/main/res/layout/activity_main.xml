<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/MrFoxTheme"
    android:layout_height="match_parent"
    tools:context="com.example.rebcesp.ejerciciointerfaces.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"/>

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/imageForest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_foreground" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageForest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logoAndroid"
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fox"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="MrFox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:width="5px"
        android:background="@drawable/button_custom"
        android:text="UNINSTALL"
        android:textColor="#216FED" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginEnd="18dp"
        android:background="#216FED"
        android:text="UPDATE"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_below="@id/button"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="20dp"
            android:scrollbars="vertical"
            android:text="@string/textoIpsus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>






</RelativeLayout>
